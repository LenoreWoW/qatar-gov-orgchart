# Qatar Government Organization Chart - Environment Configuration

# Application
NODE_ENV=development
PORT=3000
APP_NAME=Qatar Government OrgChart
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qatar_gov_orgchart
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_here_change_in_production
SESSION_MAX_AGE=3600000

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800000
PASSWORD_MIN_LENGTH=8

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,application/pdf
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@gov.qa
FROM_NAME=Qatar Government OrgChart

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Government Specific Configuration
DEFAULT_MINISTRY=MOI
ARABIC_SUPPORT=true
RTL_SUPPORT=true
AUDIT_RETENTION_DAYS=2555
DATA_RETENTION_YEARS=7

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=false
MOCK_EXTERNAL_APIS=false

# Production Security (set these in production)
TRUST_PROXY=false
SECURE_COOKIES=false
SAME_SITE_COOKIES=lax